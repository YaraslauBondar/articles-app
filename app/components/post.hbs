<article class="post bg-white dark:bg-gray-800 p-4 rounded shadow
  border-2 border-gray-800 dark:border-white dark:text-white">
  <h2 class="text-2xl leading-8 font-bold mb-3">
    <LinkTo @route="post" @model={{@post}} class="block hover:text-gray-700">
      {{@post.title}}
    </LinkTo>
  </h2>
  <div class="info font-medium text-gray-900 dark:text-white mb-3">
    {{format-date @post.publishedAt }} , {{@post.author}}
  </div>
  <div class="content text-gray-700 dark:text-gray-100 mb-4">
    {{show-part-content @post.content}}
  </div>
  <div class="flex justify-between">
    <LinkTo @route="post" @model={{@post}}
            class="text-gray-900 dark:text-white font-medium hover:text-gray-700">
      Read More &rarr;
    </LinkTo>
  </div>
</article>
